{
    "include": ["src/**/*.ts", "core/**/*.ts"],
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "allowJs": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "lib": ["esnext", "dom", "scripthost"],
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "baseUrl": "."
    }
}

{
    "include": ["./packages/purescript-monarch/src/**/*.ts", "./packages/purescript-monarch-core/src/**/*.ts"],
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "allowJs": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "lib": ["esnext", "dom", "scripthost"],
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "baseUrl": ".",
        "paths": {
            "@purescript-monarch": ["./packages/purescript-monarch/src"],
            "@purescript-monarch/core": ["./packages/purescript-monarch-core/src"]
        }
    }
}
